<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/fotozanadin"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profilzen"
                    android:scaleType="centerCrop"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/zanadin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Zanadin Akbar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp" />


                <TextView
                    android:id="@+id/kelaszanadin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas 10 PPLG 1"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="4dp"/>


                <TextView
                    android:id="@+id/absenzanadin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absen 25"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/joborang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collaborator"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/fotoarza"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profilarja"
                    android:scaleType="centerCrop"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/arza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arza Armandhito"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp" />


                <TextView
                    android:id="@+id/kelasarza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas 10 PPLG 1"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="4dp"/>


                <TextView
                    android:id="@+id/absenarza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absen 5"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/joborang2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Leader"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
